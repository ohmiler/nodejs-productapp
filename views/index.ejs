<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="p-5 mb-4 bg-white rounded-3 shadow-sm text-center">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Welcome to ProductApp</h1>
            <p class="fs-4">Discover the latest products from our community.</p>
            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <form action="/search" method="GET" class="d-flex">
                        <input type="search" class="form-control form-control-lg me-2" name="q" placeholder="Search for products..." aria-label="Search">
                        <button class="btn btn-success btn-lg" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <h2 class="mb-4">Latest Products</h2>

    <div id="product-grid" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a href="/products/<%= product._id %>">
                            <% if (product.imageUrl) { %>
                                <img src="/<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <img src="https://placehold.co/400x300" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
                            <% } %>
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">฿<%= product.price %> บาท</p>
                            <% if (product.owner) { %>
                                <p class="card-text"><small class="text-muted">By <%= product.owner.username %></small></p>
                            <% } %>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="/products/<%= product._id %>" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No products found.</p>
        <% } %>
    </div>

    <div class="text-center mt-5">
        <button id="load-more-btn" class="btn btn-outline-primary btn-lg">
            Load More
        </button>
        <div id="loading-spinner" class="spinner-border text-primary" role="status" style="display: none" >
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <script src="/js/loadMore.js"></script>
    
    <%- include('partials/footer') %>
</body>
</html>