<%- include('partials/header') %>

<div class="container mt-4">
    <% if (searchQuery) { %>
        <h1 class="display-5">Search Results for "<%= searchQuery %>"</h1>
        <p class="lead text-muted"><%= products.length %> products found.</p>
    <% } else { %>
        <h1 class="display-5">Please enter a search term.</h1>
    <% } %>

    <hr class="my-4">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a href="/products/<%= product._id %>">
                            <% if (product.imageUrl) { %>
                                <img src="/<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <img src="https://placehold.co/400x300" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
                            <% } %>
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">฿<%= product.price %> บาท</p>
                            <% if (product.owner) { %>
                                <p class="card-text"><small class="text-muted">By <%= product.owner.username %></small></p>
                            <% } %>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="/products/<%= product._id %>" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else if (searchQuery) { %>
            <div class="col-12">
                <p>No products found matching your search.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>